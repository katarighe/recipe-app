<div id="inventories">
<h1 id="inventories-heading">Inventories</h1>
<hr>

<button id="new-inventory-button">
<%= link_to 'New Inventory', new_inventory_path, id: "new-inventory" %>
</button>

<% if @inventories.empty? %>
    <div>
        <h3 class="text-center">No inventories yet.</h3>
    </div>
<% else %>

    <% @inventories.each_with_index do |inventory, index| %>
        <div class="inventory">
        <div class="inventory-main-info">
        <div class="inventory-heading">
        <h2>Inventory <%= index + 1 %></h2>
        </div>
            <div class="inventory-name">
                <h3><%= inventory.name %></h3>
            </div>
            <div class="inventory-actions">
                <button class="btn btn-primary">
                    <%= link_to 'Show', inventory_path(inventory) %>
                </button>
                <button class="btn btn-danger">
                    <%= link_to 'Delete', inventory_path(inventory), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, method: :delete %>
                </button>
            </div>
        </div>

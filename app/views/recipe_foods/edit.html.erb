<div>
  <h2>Edit food quantity for recipe:</h2>
  <%= form_with(model: @recipe_food, url: recipe_food_path, method: "patch") do |form| %>

    <div>
      <%= form.label :quantity %> <br>
      <%= form.number_field :quantity, class: "form-control" , required: true %>
    </div>

    <%= form.submit "Create", data: { turbo: false }, class: "btn btn-primary" %>
  <% end %>
</div>